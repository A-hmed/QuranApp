<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quranproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_brightness_2_24"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".quran.AddAzkar"
            android:theme="@style/noActionBar"></activity>
        <activity
            android:name=".quran.AzkarContent"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".quran.RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".quran.Login"
            android:label="Login" />
        <activity
            android:name=".quran.SuraContent"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".quran.HomeActivity"
            android:theme="@style/noActionBar" />
        <activity android:name=".quran.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>